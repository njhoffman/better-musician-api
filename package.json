{
  "name": "instrumental-api",
  "version": "1.0.0",
  "description": "API for Instrumental App",
  "main": "index.js",
  "scripts": {
    "lint": "esw lib test",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "deploy": "better-npm-run deploy",
    "test": "NODE_ENV=test mocha",
    "test:mochista": "NODE_ENV=test mochista --reporter spec --opts ./test/mochista.opts",
    "test:watch": "NODE_ENV=test mocha --watch --reporter spec",
    "coverage": "better-npm-run coverage",
    "coverage:watch": "npm run test:mochista -- --watch",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf coverage"
  },
  "betterScripts": {
    "start": {
      "command": "bin/rethinkdb.sh & node bin/server",
      "env": {
        "NODE_ENV": "production",
        "API_PORT": 4001,
        "DEBUG": "api:*"
      }
    },
    "dev": {
      "command": "nodemon --config ./nodemon.json bin/server",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "api:*"
      }
    },
    "deploy": {
      "command": "npm run lint && npm run test && npm run clean && npm run compile",
      "env": {
        "DEBUG": "api:*"
      }
    },
    "coverage": {
      "command": "./node_modules/.bin/istanbul cover --dir ./coverage --report text --report lcov node_modules/.bin/_mocha -- --opts ./test/mocha.opts --reporter spec",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "author": "Nick Hoffman",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^2.0.0",
    "better-npm-run": "0.1.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.12",
    "chalk": "^2.4.0",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "geoip-lite": "^1.2.1",
    "http": "0.0.0",
    "ip": "^1.1.4",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.4",
    "multer": "^1.2.1",
    "node-statsd": "^0.1.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "piping": "^1.0.0-rc.4",
    "request": "^2.79.0",
    "response-time": "^2.3.2",
    "rethinkdb": "^2.3.3",
    "supertest": "^3.0.0",
    "useragent": "^2.3.0",
    "uuid": "^3.2.1",
    "validator": "^9.4.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "debugger-256": "^1.4.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-watch": "^3.1.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^5.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "mochista": "^0.13.0",
    "morgan": "^1.7.0",
    "nodemon": "^1.11.0",
    "plato": "^1.7.0",
    "proxyquire": "^2.0.1",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0"
  }
}
